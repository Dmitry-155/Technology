@{
    ViewBag.Title = "Сотрудники";
    var employees = @ViewBag.Employees;
}

<h2>Сотрудники</h2>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Адрес</th>
        <th>Отдел</th>
        <th>Должность</th>
        <th>Телефон</th>
    </tr>
    @foreach (var item in employees)
    {
        <tr>
            <td>
                <a asp-area="" asp-controller="Home" asp-action="EmployeeDetail" asp-route-id="@item.EmployeeId">@item.EmployeeId</a>
            </td>
            <td>
                <text>@item.SurName</text>
            </td>
            <td>
                <text>@item.Name</text>
            </td>
            <td>
                <text>@item.MidName</text>
            </td>
            <td>
                <text>@item.Address</text>
            </td>
            <td>
                <text>@item.Department</text>
            </td>
            <td>
                <text>@item.Designation</text>
            </td>
            <td>
                <text>@item.Phone</text>
            </td>
        </tr>
    }
</table>